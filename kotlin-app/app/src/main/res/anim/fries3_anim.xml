<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator">  <!-- Linear interpolator for steady animation -->

    <!-- Translation from the top-right -->
    <translate
        android:fromXDelta="100%p"
    android:fromYDelta="-100%p"
    android:toXDelta="0%"
    android:toYDelta="0%"
    android:duration="1000" />

    <!-- Rotation effect -->
    <rotate
        android:fromDegrees="90"
    android:toDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="1000" />

    <!-- Fade-in effect -->
    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0"
        android:duration="1000" />
</set>
