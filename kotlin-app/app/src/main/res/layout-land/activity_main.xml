<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">
    <!-- our main screen -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- the tool bar in top of the screen -->


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="Noto Serif Display"
            app:title="@string/title" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textStyle="italic"
            app:fontFamily="@font/light_italic_font"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- The 5 pictures displayed each one next to each other -->


        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:minHeight="200dp"
            android:src="@drawable/vibe1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image2"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:minHeight="200dp"
            android:layout_height="300dp"
            android:src="@drawable/vibe2"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toEndOf="@id/image1"
            app:layout_constraintEnd_toStartOf="@id/image3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/image3"
            android:minHeight="200dp"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/vibe3"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toEndOf="@id/image2"
            app:layout_constraintEnd_toStartOf="@id/image4"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/image4"
            android:minHeight="200dp"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/vibe4"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toEndOf="@id/image3"
            app:layout_constraintEnd_toStartOf="@id/image5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/image5"
            android:minHeight="200dp"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/vibe5"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toEndOf="@id/image4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- the menu of the meals -->


        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/image5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/menu_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_title"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:layout_marginBottom="24dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/burger1"
                        android:scaleType="centerCrop"
                        android:onClick="onMealImageClick"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/meal_title1"/>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title1"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/burger3"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title2"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/burger4"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title3"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/burger8"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title4"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/burger7"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title5"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/sausage"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title6"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage7"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/batata"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title7"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage8"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/chips1"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title8"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage9"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/onionring"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title9"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage10"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/drink1"
                        android:scaleType="centerCrop"
                        android:onClick="onMealImageClick"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/meal_title1"/>

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title10"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage11"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/drink2"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title11"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onMealClick">

                    <ImageView
                        android:id="@+id/mealImage12"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/drink3"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_title12"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/book_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_table"
                android:textSize="24sp"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/how_many"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_many"
                android:textSize="20sp"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volume"
                android:text="3"
                android:textSize="20dp"
                android:layout_gravity="center"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="8"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                app:layout_constraintTop_toBottomOf="@+id/volume"
                />

            <Button
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/when"
                android:textSize="20sp"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                />
            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:textSize="20sp"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                />
            <NumberPicker
                android:id="@+id/paymentPicker"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Are you vegan?"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">  <!-- Vertical or horizontal depending on your design -->

                <RadioButton
                    android:id="@+id/yes"
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_yes"
                    android:onClick="onRadioButtonClicked"
                    />

                <RadioButton
                    android:id="@+id/no"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_no"
                    android:onClick="onRadioButtonClicked"
                    />

            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/input_remarks"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:text=""
                android:ems="10"
                android:id="@+id/input_remarks"
                android:textSize="25dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/celebrating"
                />
            <CheckBox
                android:id="@+id/engagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/engagement"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <CheckBox
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <CheckBox
                android:id="@+id/nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nothing"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/submitAnswersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reservation"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="30sp"
                android:textStyle="italic"
                app:fontFamily="@font/light_italic_font"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
